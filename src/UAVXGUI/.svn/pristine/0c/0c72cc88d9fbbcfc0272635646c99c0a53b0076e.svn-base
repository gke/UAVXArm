        void burn()
        {
            hexOpenFileDialog.Filter = "PIC Firmware (*.hex)|*.hex|alle Dateien (*.*)|*.*";
            //letzten Pfad aus Settings holen
            hexOpenFileDialog.InitialDirectory = Properties.Settings.Default.PICHexDirectory;
