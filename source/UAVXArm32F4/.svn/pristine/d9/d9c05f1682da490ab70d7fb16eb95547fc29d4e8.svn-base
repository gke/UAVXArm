void StartBaro(boolean ReadPressure) {

	sioWriteBlock(SIOBaro, MS56XX_ID, ReadPressure ? MS56XX_PRESS : MS56XX_TEMP
			| MS56XX_OSR, 0, 0);

} // StartBaro

