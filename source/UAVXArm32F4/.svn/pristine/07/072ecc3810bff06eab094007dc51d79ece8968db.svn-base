#define RXBUF_SIZE	64

typedef struct {
    unsigned int c1  : 11;
    unsigned int c2  : 11;
    unsigned int c3  : 11;
    unsigned int c4  : 11;
    unsigned int c5  : 11;
    unsigned int c6  : 11;
    unsigned int c7  : 11;
    unsigned int c8  : 11;
    unsigned int c9  : 11;
    unsigned int c10 : 11;
    unsigned int c11 : 11;
    unsigned int c12 : 11;
    unsigned int c13 : 11;
    unsigned int c14 : 11;
    unsigned int c15 : 11;
    unsigned int c16 : 11;
    }  __attribute__((packed)) SBUSChannelStruct_t;

typedef struct {
    union {
	uint8_t b[RXBUF_SIZE];
	SBUSChannelStruct_t c;
    } u;
	uint8 state;
	uint8 index;
	uint8 channel;
	uint32 lastByteReceived;
} RCFrameStruct_t;

RCFrameStruct_t RCFrame;

