#ifndef _tuning_h
#define _tuning_h


enum tuneStates {
	Tuning, startTuning, prepareTuning, stopTuning, notTuning,
};

typedef struct {
	PIDStruct O, I;
	real32 logTau, logBeta;
	real32 Ku, Tu;
	real32 Offset;
	real32 FC;
} tunePIDStruct;

typedef struct {
	tunePIDStruct T[3];
} tuneStruct;

extern tuneStruct tune;

extern void CheckTune(void);
extern void Tune(void);
extern void TuneApplyOffset(void);
extern void TuneComputePIDCoeffs(int32 a);
extern void TuneZeroOffsets(void);

extern boolean TuningEnabled;
extern uint8 TuneState;
extern real32 TuneKpScale;
extern uint8 TuneAxis;

#endif


